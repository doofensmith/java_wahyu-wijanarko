type Post {
    id: ID!
    title: String!
    text: String!
    category: String
    author: Author!
}

type Author {
    id: ID!
    name: String!
    thumbnail: String
    post: [Post]!
}

# The Root Query for the application
type Query {
    getAllAuthor: [Author]
    getAllPost: [Post]
    recentPost(count: Int, offset: Int): [Post]!
}


# The Root Mutation for the application
type Mutation {
    writePost(title: String!, text: String!, category: String, authorId: Int!) : Post!
}